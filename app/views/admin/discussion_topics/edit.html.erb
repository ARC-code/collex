<% current_page "admin" -%>
<% current_sub_page "Forum Topics" -%>
<div class="inner_content_container">
	<div class="page_header">Editing Forum Topic</div>

	<%= error_messages_for :discussion_topic %>
	
	<% form_tag :action => 'update', :id => @discussion_topic do %>
	<p><label for="topic">Topic</label><br/>
	<%= text_field 'discussion_topic', 'topic'  %></p>
	<p><label for="description">Description</label><br/>
	<%= text_area 'discussion_topic', 'description'  %></p>
	<%= submit_tag "Update" %>
	<% end %>
	
	<%= link_to 'Return to Forum Topic List', {:action => 'index'}, {:class => 'modify_link'} %>
</div>
