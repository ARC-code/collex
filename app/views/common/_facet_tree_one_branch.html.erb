<% # /common/facet_tree_one_branch params: FacetCategory branch, int indent, bool is_edit_mode, string parent_id, bool start_hidden -%>
<% suppress_empty_nodes = !is_edit_mode -%>
<% for site in branch -%>
	<% if !suppress_empty_nodes || site_subtotal(site) != 0 -%>
		<% if site['type'] == nil # is category -%>
			<%= site_selector(site, indent, is_edit_mode, true, parent_id, start_hidden, true ) %>
			<%= render :partial => '/common/facet_tree_one_branch', :locals => { :branch => site.sorted_children, :indent => indent + 1, :is_edit_mode => is_edit_mode, :parent_id => "#{parent_id} child_of_#{site.id}", :start_hidden => true } %>
		<% else # is site -%>
			<%= site_selector(site, indent, is_edit_mode, false, parent_id, start_hidden, site['found'] ) %>
		<% end # if it is a category or site -%>
	<% end # if the site isn't suppressed -%>
<% end # each site -%>
