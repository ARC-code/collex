<%# /common/facet_tree_one_branch params: FacetCategory branch, int indent, string parent_id, bool start_hidden, hash (str2int) site_count -%>
<% for site in branch -%>
	<% if site_subtotal(site_count, site) != 0 -%>
		<% if site['handle'] == nil # is category -%>
			<% hidden = session[:resource_toggle] ? (session[:resource_toggle]["#{site['id']}"] == 'open' ? false : true) : true  -%>
			<%= site_selector(site, indent, true, parent_id, start_hidden, true, hidden, site_count ) %>
			<%= render :partial => '/common/facet_tree_one_branch', :locals => { :branch => site['children'], :indent => indent + 1, :parent_id => "child_of_#{site['id']}", :start_hidden => hidden || start_hidden, :site_count => site_count } %>
		<% else # is site -%>
			<%= site_selector(site, indent, false, parent_id, start_hidden, site['found'], false, site_count ) %>
		<% end # if it is a category or site -%>
	<% end # if the site isn't suppressed -%>
<% end # each site -%>
