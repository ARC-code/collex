<% # params: ActiveRecord comment, int thread_id, bool thread_link (whether to display the go to thread link), bool can_delete, bool is_main -%>

<div class="<%= is_main ? 'new_discussion' : 'discussion_thread_list' %>">
	<div class="discussion_comment2">
	<% if comment.reported == 1 && can_delete -%>
		<div class="reported_comment">
			NOTICE: This comment has been reported as objectionable by <%= user.fullname %>, and is pending moderation.
		</div>
	<% end -%>

	<% if comment.get_type() == "comment" -%>
		<% comment_user  = User.find(comment.user_id) %>
		<table><tr>
			<td></td><td>
				<% if is_main -%>
					<span class="discussion_title"><%= DiscussionThread.find(thread_id).title %></span>
				<% end -%>
			</td>
		<% if !is_main -%>
			</tr><tr>
				<td></td><td>
					<div style="float:right;"><%= link_to 'X', "/discussion_threads/delete_comment?comment=#{comment.id}", :confirm => 'Are you sure?', :method => :delete, :class => 'modify_link' if can_delete %></div>
					<span class="discussion_comment_title">	<%= get_user_link(comment_user) %> comments:
				</span>
				</td>
		<% end -%>
		</tr><tr>
			<td valign="top"><div class="discussion_user_picture"><%= render :partial => 'users_picture', :locals => { :user_id => comment.user_id } %></div></td>
			<td valign="top" width="100%">
				<%= link_to "[go to thread]", "/discussion_threads/view_thread?thread=#{thread_id}", :class => 'nav_link' if thread_link %>
				<%= comment.comment %>
			</td>
		</tr><tr>
			<td></td><td><%= render :partial => 'comment_footer', :locals => { :comment => comment, :username => is_main ? get_user_link(comment_user) : nil, :include_report => true } %></td>
		</tr></table>

	<% elsif comment.get_type() == "nines_object" -%>
			<% hit = CachedResource.get_hit_from_resource_id(comment.cached_resource_id) -%>
			<%= link_to "[go to thread]", "/discussion_threads/view_thread?thread=#{thread_id}", :class => 'nav_link' if thread_link %>
			<%= render :partial => 'added_object', :locals => {:comment => comment, :can_delete => can_delete, :is_first => comment.position == 1 } %>
			<table><tr>
				<%= render :partial => '/results/result_row', :locals => { :row_id => "test", :index => 2, :hit => hit, :has_exhibits => false } %>
			</tr><tr><td></td><td colspan='4'>
				<%= render :partial => 'comment_footer', :locals => { :comment => comment, :username => nil, :include_report => false } %>
			</td></tr></table>
		<% elsif comment.get_type() == "nines_exhibit" -%>
			<% exhibit = Exhibit.find(comment.exhibit_id) -%>
			<%= link_to "[go to thread]", "/discussion_threads/view_thread?thread=#{thread_id}", :class => 'nav_link'  if thread_link %>
			<%= render :partial => 'added_object', :locals => {:comment => comment, :can_delete => can_delete, :is_first => comment.position == 1 } %>
			<table><tr>
			<td><div class="discussion_user_picture"><img src="<%= exhibit.thumbnail %>" alt="exhibit" /></div></td>
			<td valign="top" width="100%">
				<h3><%= get_exhibit_link(exhibit) %></h3>
				<%= render :partial => 'comment_footer', :locals => { :comment => comment, :username => nil, :include_report => false } %>
			</td>
			</tr></table>
		<% elsif comment.get_type() == "inet_object" -%>
			<%= link_to "[go to thread]", "/discussion_threads/view_thread?thread=#{thread_id}", :class => 'nav_link'  if thread_link %>
			<%= render :partial => 'added_object', :locals => {:comment => comment, :can_delete => can_delete, :is_first => comment.position == 1 } %>
			<table><tr>
			<td><div class="discussion_user_picture"><img src="<%= comment.image_url %>" alt="thumbnail" /></div></td>
			<td valign="top" width="100%">
				<%=make_ext_link(comment.link_url) %>
				<p><%=h comment.comment %></p>
				<%= render :partial => 'comment_footer', :locals => { :comment => comment, :username => nil, :include_report => true } %>
			</td>
			</tr></table>
		<% else -%>
			ERROR: ill-formed comment. (Comment type <%- comment.comment_type %> is unknown)
		<% end -%>
	</div>
</div>
