<h1>Listing exhibit_pages</h1>

<table>
  <tr>
    <th>Exhibit</th>
    <th>Position</th>
  </tr>

<% for exhibit_page in @exhibit_pages %>
  <tr>
    <td><%=h exhibit_page.exhibit_id %></td>
    <td><%=h exhibit_page.position %></td>
    <td><%= link_to 'Show', exhibit_page %></td>
    <td><%= link_to 'Edit', edit_exhibit_page_path(exhibit_page) %></td>
    <td><%= link_to 'Destroy', exhibit_page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

