<% div :id => "sortable-pages" do %>
  <%- @exhibit.pages.each do |@exhibited_page| -%>
    <% div :id => dom_id(@exhibited_page), :class => "sortable-page" do %>
      <% div :class => "page-handle draggable" do %>
        <%= "Move Page #{@exhibited_page.position}" %>
        <%= link_to_function "&nbsp;X&nbsp;", "SortableExhibit.remove('#{exhibit_page_path(@exhibit, @exhibited_page)}', '#{dom_id(@exhibited_page)}')", :title => "Remove this page" %>
        <%= image_tag("draggable.jpg", :alt => "drag me") %>
      <% end #div %>
      
      <%# For display of sections %>
      <% @exhibited_page.exhibited_sections.each do |@exhibited_section| div :class => "section", :id => dom_id(@exhibited_section) do %>
        <% div :class => "section-handle draggable" do %>
          Move Section
          <%= link_to_function "&nbsp;X&nbsp;", "SortableExhibit.remove('#{exhibit_page_section_path(@exhibit, @exhibited_page, @exhibited_section)}', '#{dom_id(@exhibited_section)}')", :title => "Remove this section" %>
          <%= image_tag("draggable.jpg", :alt => "drag me") %>
        <% end #div %>
        
        <%= render( :partial => "exhibited_pages/#{@exhibited_section.template}_arrange", :locals => {:section => @exhibited_section}) %>
      <% end end %>
      
    <% end #div %>
  <%- end -%>
<% end %>

<script type="text/javascript" language="javascript" charset="utf-8">
// <![CDATA[
  SortableExhibit.create("<%= @exhibit.id %>", {objectTag: 'span', objectOverlap: 'horizontal'});
// ]]>
</script>