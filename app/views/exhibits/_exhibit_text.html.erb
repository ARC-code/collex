<% # exhibit_text params:  ExhibitElement element; enum which { left, right, only }, bool is_edit_mode -%>
<% if is_edit_mode -%>
	<% div_id = "text_#{element.id}" -%>
	<% div_id += "_#{which}" if which != "only" -%>
	<div id='<%= div_id %>' class="exhibit_text">
		<%= (which == 'right' ? element.element_text2 : element.element_text) %>
	</div>
	<script type="text/javascript">
		if(window.initializeInplaceRichEditor)
			initializeInplaceRichEditor('<%= div_id %>,exhibit_builder_outline_content', "/my9s/edit_text,/my9s/refresh_outline");
	</script>
<% else -%>
	<div class="exhibit_text"><%= decode_exhibit_links(element.element_text) %></div>
<% end -%>


