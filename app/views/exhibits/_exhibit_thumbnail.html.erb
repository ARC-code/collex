<% #parameters: Exhibit exhibit; int height=50; bool show_immediately -%>
<% height ||= 50 -%>
<div class="exhibit_thumbnail" style="overflow: hidden;width:<%= height %>px;height:<%= height %>px"><img id="thumbnail_<%=exhibit.id %>" src="<%= get_image_url(exhibit.thumbnail)%>" style="display:none;" alt=""/></div>
<script language="JavaScript">
	$("thumbnail_<%=exhibit.id %>").observe('load', thumbnail_resize);
	<% if show_immediately -%>
	setTimeout(thumbnail_resize.bind($("thumbnail_<%=exhibit.id %>")), 500);
	<% end -%>
</script>
