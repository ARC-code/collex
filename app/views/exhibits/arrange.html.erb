<% div :id => "exhibit-body" do %>
  <% div :id => "exhibit-menu" do ul do %>
    <%= li image_tag("loading.gif"), :style => "display:none;", :id => "exhibit-menu-spinner" %>
    <%= li link_to('All Exhibits', exhibits_path) %>
    <%= li link_to('My Exhibits', exhibits_path(:user_id => user.id)) if is_logged_in? %>
    <%= li link_to("As Many Pages", exhibit_page_path(@exhibit, @exhibit.pages.first)) %>
    <%= li link_to 'Edit', edit_exhibit_page_path(@exhibit, @exhibit.pages.first) if @exhibit.updatable_by?(user_or_guest) %>
    
    <%= li link_to_function('Hide Sections', "$$('.section').invoke('hide')") + " / " + link_to_function('Show Sections', "$$('.section').invoke('show')") %>
    <%= li link_to_function('Hide Objects', "$$('.items').invoke('hide')") + " / " + link_to_function('Show Objects', "$$('.items').invoke('show')") %>
    <%= li link_to_function('Alert Sorting', "alert(Sortable.serialize('sortable-pages'));") %>
    <%= li link_to_function('Alert Sections', "alert(Sortable.serialize('sortable-pages'));") %>
    <%= li link_to_function('Save Arrangement', 'SortableStuff.submit()') %>
    
  <% end end %>
  <% div :id => "exhibit-content" do %>
    <%= h2 @exhibit.title %>
    <%= div @exhibit.annotation %>
    <%= h3 @exhibit.user.fullname %>
    <%= p link_to(@exhibit.license.name, @exhibit.license.url, :target => "_blank") %>
  
    <% div :id => "arrange-save-successful", :style => "display: none;", :class => "flash_notice" do %>
      <%= h2 "Arrangement saved!" %>
      <%= link_to_function "(click to close notice)", "$('arrange-save-successful').hide()" %>
    <% end %>
    <% div :id => "arrange-save-failed", :style => "display: none;", :class => "flash_error" do %>
      <%= h2 "There was a problem saving your arrangement." %>
      <%= link_to_function "(click to close notice)", "$('arrange-save-failed').hide()" %>
    <% end %>
    
    <% div :id => "sortable-pages" do %>
      <%- @exhibit.pages.each do |@exhibited_page| -%>
        <% div :id => dom_id(@exhibited_page), :class => "sortable-page" do %>
          <%= span "Move Page #{@exhibited_page.position}", :class => "page-handle", :style => "cursor: move" %>
          <%= render(:partial => "exhibited_pages/#{@exhibit.template}_arrange") %>
        <% end #div %>
      <%- end -%>
    <% end %>
  <% end %>
<% end %>
<script type="text/javascript" language="javascript" charset="utf-8">
// <![CDATA[
  var sortableSections = ['<%= @exhibit.sections.collect {|section| dom_id(section) }.join("\', \'") %>'];
  var sortablePages = ['<%= @exhibit.pages.collect {|page| dom_id(page) }.join("\', \'") %>'];

  var SortableStuff = {
    submit: function() {
      $('exhibit-menu-spinner').show();
      $('arrange-save-successful').hide();
      $('arrange-save-failed').hide();
      
      var serializedSections = sortablePages.collect(function(name) {
        return Sortable.serialize(name);
      }).join('&');
       var serializedResources = sortableSections.collect(function(name) {
        return Sortable.serialize(name);
      }).join('&');
      //alert(sortablePages);
      new Ajax.Request("/exhibits/sort", {
        method: "post",
        parameters: Sortable.serialize("sortable-pages") + '&id=' + <%= @exhibit.id %> + '&' + serializedSections + '&' + serializedResources,
        onComplete: function(transport){
          $('exhibit-menu-spinner').hide();
          if(200 == transport.status)
            $('arrange-save-successful').show();
          else
            $('arrange-save-failed').show();
          end
        }
      });
    }
  }
  sortableSections.each(function(id){
    Sortable.create(id, {tag: 'div', constraint: 'none', overlap: 'horizontal', only: 'sortable-object', containment: sortableSections, dropOnEmpty: true, handle: 'item-handle', scroll: window});
  });
  sortablePages.each(function(id){
    Sortable.create(id, {tag: 'div', only: 'section', containment: sortablePages, dropOnEmpty: true, handle: 'section-handle', scroll: window});
  });
  Sortable.create("sortable-pages", {tag: 'div', only: 'sortable-page', handle: 'page-handle', scroll: window});

// ]]>
</script>