<%= javascript_include_tag "sortable_exhibit" %>

<% div :id => "exhibit-body" do %>
  <% div :id => "exhibit-menu" do ul do %>
    <%= li image_tag("loading.gif"), :style => "display:none;", :id => "exhibit-menu-spinner" %>
    <%= li link_to('All Exhibits', exhibits_path) %>
    <%= li link_to('My Exhibits', exhibits_path(:user_id => user.id)) if is_logged_in? %>
    <%= li link_to("As Many Pages", exhibit_page_path(@exhibit, @exhibit.pages.first)) %>
    <%= li link_to 'Edit', edit_exhibit_page_path(@exhibit, @exhibit.pages.first) if @exhibit.updatable_by?(user_or_guest) %>
    
    <%= li link_to_function('Hide Sections', "$$('.section').invoke('hide'); $('show-sections-link').show(); this.up().hide();"), :id => "hide-sections-link" %>
    <%= li link_to_function('Show Sections', "$$('.section').invoke('show'); this.up().hide(); $('hide-sections-link').show()"), :id => "show-sections-link", :style => "display: none" %>
    
    <%= li link_to_function('Hide Objects', "$$('.sortable-object').invoke('hide'); $('show-objects-link').show(); this.up().hide();"), :id => "hide-objects-link" %>
    <%= li link_to_function('Show Objects', "$$('.sortable-object').invoke('show'); this.up().hide(); $('hide-objects-link').show()"), :id => "show-objects-link", :style => "display: none" %>
    <%= li link_to_function('Save Arrangement', "SortableExhibit.submit('#{@exhibit.id}')") %>
    
  <% end end %>
  <% div :id => "exhibit-content" do %>
    <%= h2 @exhibit.title %>
    <%= div @exhibit.annotation %>
    <%= h3 @exhibit.user.fullname %>
    <%= p link_to(@exhibit.license.name, @exhibit.license.url, :target => "_blank") %>
  
    <% div :id => "arrange-save-successful", :style => "display: none;", :class => "flash_notice" do %>
      <%= h2 "Arrangement saved!" %>
      <%= link_to_function "(click to close notice)", "$('arrange-save-successful').hide()" %>
    <% end %>
    <% div :id => "arrange-save-failed", :style => "display: none;", :class => "flash_error" do %>
      <%= h2 "There was a problem saving your arrangement." %>
      <%= link_to_function "(click to close notice)", "$('arrange-save-failed').hide()" %>
    <% end %>
    
    <%= render(:partial => "exhibited_pages/#{@exhibit.template}_arrange") %>
    
  <% end %>
<% end %>
