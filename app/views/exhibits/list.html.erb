<% current_page "Exhibits" -%>

<div class="inner_content_container">
	<%= render :partial => 'home/featured_exhibit' %>
	
	<div class="exhibit_list">
		<div class="page_header">Choose an exhibit to view <%= link_to_function( "(or create one of your own)", "var dlg = new CreateNewExhibitWizard({ progress_img: '#{PROGRESS_SPINNER_PATH}', url_get_objects: '/my_collex/get_all_collected_objects', populate_collex_obj_url: '/forum/get_nines_obj_list_with_image'}); dlg.show();", :class => 'modify_link page_header_parenthetical') if is_logged_in? %></div>
		<div class="exhibit_left_column">
<% if Branding.use_groups() == true %>
			<%= render :partial => 'exhibit_list', :locals => { :ty => 2 } %>
<% end -%>
			<%= render :partial => 'exhibit_list', :locals => { :ty => 0 } %>
		</div>
		<div class="exhibit_right_column">
			<%= render :partial => 'exhibit_list', :locals => { :ty => 1 } %>
		</div>
	</div>
	<div class="clear_both"></div>
</div>
