<% current_page "Exhibits" -%>

<div class="inner_content_container">
	<%= render :partial => 'home/featured_exhibit' %>
	
	<div class="exhibit_list">
	<div class="page_header">Choose an exhibit to view</div>
	<table>
	<% for exhibit in @exhibits -%>
		<tr>
			<td><%= render :partial => 'exhibit_thumbnail', :locals => { :exhibit => exhibit, :show_immediately => false } %></td>
			<td class="exhibit_link"><%= get_exhibit_link(exhibit) %>&nbsp;by
				<%= get_exhibit_user_link(exhibit) %>
				<% if is_logged_in? && exhibit.user_id == User.find_by_username(session[:user][:username]).id -%>
					| <%= link_to("[Edit this exhibit]", { :controller => 'my9s', :action => 'edit_exhibit', :id => exhibit.id }, :class => 'nav_link' ) %>
				<% end -%>
			</td>
		</tr>
	<% end -%>
	</table>
	</div>
</div>
