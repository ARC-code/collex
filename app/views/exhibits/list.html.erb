<% current_page "Exhibits" -%>

<div class="inner_content_container">
	<%= render :partial => 'home/featured_exhibit' %>
	
	<% non_reviewed = [] -%>
	<% student = [] -%>
	<% @exhibits.each {|exhibit| 
		if exhibit.category == 'student'
			student.push(exhibit)
		elsif exhibit.category != 'peer-reviewed'
			non_reviewed.push(exhibit)  
		end
	} -%>
	<div class="exhibit_list">
		<div class="page_header">Choose an exhibit to view</div>
		<div class="exhibit_left_column">
			<%= render :partial => 'exhibit_list', :locals => { :title=> "Sandbox <div class='exhibit_list_title_explanation'>Exhibits that have been shared but are not peer-reviewed.</div>", :exhibit_list => non_reviewed } %>	
		</div>
		<div class="exhibit_right_column">
			<%= render :partial => 'exhibit_list', :locals => { :title=> "Student Section<div class='exhibit_list_title_explanation'>Student work that has been shared.</div>", :exhibit_list => student } %>	
		</div>
	</div>
	<div class="clear_both"></div>
</div>
