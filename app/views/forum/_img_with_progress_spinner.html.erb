<% # img_with_progress_spinner: params: src, alt, klass, width=nil -%>
<% width ||= 'none' %>
<% width_str = width == 'none' ? '' : "width='#{width}px'" %>
<img class='<%= klass %>' src="<%= PROGRESS_SPINNER_PATH %>" alt="<%= alt %>" <%= width_str %>/>
<img class="<%= klass %> hidden" src="<%= src %>" alt="<%= alt %>" <%= width_str %> onload="$(this).previous().addClassName('hidden'); $(this).removeClassName('hidden');" />
