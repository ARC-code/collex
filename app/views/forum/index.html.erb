<% current_page "Forum" -%>
<% user_id = session[:user] ? User.find_by_username(session[:user][:username]).id : nil -%>
<% topics = DiscussionTopic.get_all_with_date() -%>

	<div class="page_header">Forum</div>
    <div class="page_subheader">We've set aside this portion of NINES for commentary, discussion and collaboration among the NINES community.
	Join in the conversations below immediately, or login to your free account to associate objects of searches with your entries.</div>

<% for topic_arr in topics -%>
	<% topic = topic_arr[:topic_rec] -%>
	<% last_updated_date = topic_arr[:date] -%>
	<% threads = topic.discussion_threads -%>
	<table class="FH_cat_table" border="0" cellpadding="0" cellspacing="0">
    	<tr><td colspan="5" class="FH_cat_header"><%= topic.topic %></td></tr>

    	<tr><td colspan="5" class="FH_cat_info">
        	<p><%= topic.description %></p>
        	<p><%= pluralize(threads.length, 'discussion') %><%= "• Last updated #{comment_time_format(last_updated_date)}" if threads.length > 0 %></p>
			<%= link_to_function "[New #{topic.topic} Post]", "new ForumReplyDlg({ topic_id: #{topic.id}, submit_url: '/forum/post_comment_to_new_thread', populate_exhibit_url: '/forum/get_exhibit_list', populate_nines_obj_url: '/forum/get_nines_obj_list', progress_img: '#{PROGRESS_SPINNER_PATH}', logged_in: #{is_logged_in?}, redirect: '/forum/view_topic?topic=#{topic.id}&page=-1'	});", { :class => 'nav_link' } %>
    	</tr>
		<% num_displayed = threads.length < 6 ? threads.length : 6 -%>
		<% num_displayed.times do |i| -%>
			<% if i == 0 || i == 3 -%>
			<tr>
			<% end -%>

				<td class="FH_post">
					<% if threads[i].discussion_comments.length < 1 -%>
						ERROR: ill-formed thread. (Main comment is missing)<br/>
					<% else -%>
						<% main_comment = threads[i].discussion_comments[0] -%>
						<%= render :partial => 'summary', :locals => { :comment=> main_comment, :thread_id => threads[i].id, :can_delete => is_logged_in? && (is_admin? || (main_comment.user_id == user_id)) } %>
					<% end # there is a comment -%>
				</td>

			<% if i == 2 || i == num_displayed-1 -%>
			</tr>
			<% else -%>
            <td class="FH_spacer"></td>
			<% end -%>
		<% end -%>
		<% if threads.length > 6 -%>
	        <tr><td colspan="5" class="FH_view_all"><%= link_to("View all #{topic.topic} Posts …", { :action => 'view_topic', :topic => topic.id }, :class => 'nav_link') %></td>
		<% end -%>
        </tr>    
    </table>
 <% end -%>   
