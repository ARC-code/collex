<%# group_exhibits_list : parameters: ActiveRecord group -%>
<div class="right_column_header">Exhibits</div>
<% exhibits = Exhibit.find_all_by_group_id(group.id) -%>
<% if exhibits.length == 0 -%>
	<div class="empty_list_text" >There have been no exhibits published in this group.</div>
<% else -%>
	<table>
<% for exhibit in exhibits -%>
	<tr>
		<td><%= render :partial => '/exhibits/exhibit_thumbnail', :locals => { :exhibit => exhibit, :show_immediately => false } %></td>
		<td class="exhibit_link"><%= get_exhibit_link(exhibit) %>&nbsp;by
			<%= get_exhibit_user_link(exhibit) %>
			<% if is_logged_in? && exhibit.user_id == User.find_by_username(session[:user][:username]).id -%>
				| <%= link_to("[Edit this exhibit]", { :controller => 'my9s', :action => 'edit_exhibit', :id => exhibit.id }, :class => 'nav_link' ) %>
			<% end -%>
		</td>
	</tr>
<% end -%>
	</table>
<% end -%>
