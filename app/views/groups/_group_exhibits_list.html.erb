<%# group_exhibits_list : parameters: ActiveRecord group, ActiveRecord, cluster, int user_id -%>
<%# if cluster is nil, then this is the group page, otherwise it is the cluster page -%>
<% cluster ||= nil -%>
<div class="group_header">Exhibits</div>
<% if group.can_edit(user_id) -%>
<div class="set_exhibit_style">
<% if cluster == nil -%>
	<%= link_to_function("[set exhibit style]", "new EditFontsDlg('/groups/update', #{group.id}, gGroupData, 'group', true, 'group_details')", { :class => 'modify_link' }) %>
	<%= link_to_function("[create new cluster]", "new CreateNewClusterDlg('/clusters/create', #{group.id}, '#{group.name}', 'group_exhibits_list', 'group_exhibits')", { :class => 'modify_link' }) %>
<% else -%>
	<%= link_to_function("[move exhibit to cluster]", "moveExhibitToCluster('/clusters/move_exhibit', #{cluster.id}, gNonClusteredExhibits, 'cluster_details')", { :class => 'modify_link' }) %>
<% end -%>
</div>
<% end -%>
<% exhibits = Exhibit.find_all_by_group_id_and_is_published(group.id, 1) if cluster == nil -%>
<% exhibits = Exhibit.find_all_by_cluster_id_and_is_published(cluster.id, 1) if cluster != nil -%>
<% if exhibits.length == 0 -%>
	<div class="empty_list_text" >There have been no exhibits published in this <%= cluster == nil ? "group" : "cluster"  %>.</div>
<% else -%>
	<table>
<% if cluster == nil -%>
<% clusters = Cluster.find_all_by_group_id(group.id) -%>
<% for cluster in clusters -%>
	<tr>
		<td><%= render :partial => 'common/thumbnail', :locals => { :element_id => "cluster_#{cluster.id}", :url => get_image_url(get_url_for_internal_image(cluster.image, :thumb)), :show_immediately => true } %></td>
		<td class="exhibit_link"><%= link_to cluster.name, { :controller => 'clusters', :action => 'show', :id => cluster.id }, :class => 'nav_link' %></td>
	</tr>
<% end -%>
<% end -%>
<% for exhibit in exhibits -%>
	<tr>
		<td><%= render :partial => '/exhibits/exhibit_thumbnail', :locals => { :exhibit => exhibit, :show_immediately => true } %></td>
		<td class="exhibit_link"><%= get_exhibit_link(exhibit) %>&nbsp;by
			<%= get_exhibit_user_link(exhibit) %>
			<% if is_logged_in? && exhibit.user_id == User.find_by_username(session[:user][:username]).id -%>
				| <%= link_to("[Edit this exhibit]", { :controller => 'my9s', :action => 'edit_exhibit', :id => exhibit.id }, :class => 'nav_link' ) %>
			<%= link_to_function("[remove from cluster]", "removeFromCluster(#{group.id}, #{cluster.id}, #{exhibit.id});", { :class => 'nav_link' }) if group.can_edit(user_id) && cluster != nil %>
			<% end -%>
		</td>
	</tr>
<% end -%>
	</table>
<% end -%>
