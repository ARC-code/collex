<!DOCTYPE html
     PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
     "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title>N I N E S</title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/> 

	<!-- site wide styles -->
  <%= stylesheet_link_tag "globals", :media => "all" %>
  <%= stylesheet_link_tag "core", :media => "all" %>

	<!-- section styles -->
	<%= case @site_section 
		when :search 
		  stylesheet_link_tag("results", :media => "all") +
	  	  stylesheet_link_tag("search", :media => "all")
		when :home 
		  stylesheet_link_tag "home", :media => "all"
		when :login 
		  stylesheet_link_tag "login", :media => "all" 
		when :tag
		  stylesheet_link_tag("results", :media => "all") +
		  stylesheet_link_tag("tag", :media => "all")
		else 
		  stylesheet_link_tag("sidebar", :media => "all") +
		  stylesheet_link_tag("exhibits", :media => "all")
    end 
	%>
<!--[if IE]>
	  	<%= stylesheet_link_tag "ie", :media => "all" %>
<![endif]-->
	
	<!-- site wide scripts -->
  <%= javascript_include_tag "protoaculous.1.8.1.min.js", "application.js" if RAILS_ENV =~ /production/ %>
  <%= javascript_include_tag :defaults unless RAILS_ENV =~ /production/ %>
  <%= javascript_include_tag 'spinner' %>
  <%= javascript_include_tiny_mce_if_used %>
  <%= tiny_mce if using_tiny_mce? %>

	<!-- section scripts -->
	<%= case @site_section 
		when :search 
		  javascript_include_tag 'search_validation'
		when :tag
		  javascript_include_tag 'sidebar_tag_cloud'
		when :home 
		when :login 
		else 
		  javascript_include_tag 'sidebar_tag_cloud'
    end 
	%>

</head>
<body>
	
	<div id="mainContent">

	<div id="container">
		<div id="header-left">
			<img src="" alt="" />
		</div>
		<div id="header-center">
			<span class="emph1"><a href="/">&nbsp;</a></span><br /><i>&nbsp;</i><br />
		</div>
		<div id="header-right">
			<% if @use_signin -%>
				<%= render :partial => '/common/login_slider' %>
			<% end -%>
		</div>
