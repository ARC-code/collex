<% illustration_id = illustration != nil ? illustration.id : -1 %>
<div class="exhibit_delta_link">
	<%= link_to_function change_char(), "change_illustration(#{exhibit.id}, #{page}, #{element_id}, #{illustration_id}, 'illustration_#{illustration_id}' );", :title => 'Edit illustration options' %>
</div>
<div id='illustration_<%= illustration_id %>' class="resizable">
	<%= render :partial => 'exhibits/illustration', :locals => { :illustration => illustration } %>
</div>
