<% element_count = 1 -%>
<div id="current_page" style="display:none;"><%= page.id %></div>
<% for section in page.exhibit_sections -%>
	<div id="section_<%= section.position %>" class="edit_exhibit_box edit_exhibit_section_box <%= 'edit_exhibit_box_no_border' if section.has_border == 0 %>">
		<%= render :partial => 'edit_exhibit_section', :locals => { :section => section, :page => page, :element_count => element_count } %>
		<% element_count += section.exhibit_elements.length -%>
	</div> <% # Editing Section outer box %>
<% end # for each section -%>
