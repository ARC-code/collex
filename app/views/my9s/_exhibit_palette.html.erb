<% # exhibit_palette params: ActiveRecord exhibit -%>	
<% collected_object_thumbnails = ExhibitObject.get_collected_object_thumbnail_array(exhibit.id) -%>
<span class="exhibit_profile">Exhibit Palette (<%= pluralize(collected_object_thumbnails.length, "NINES Object") %>)
	<%= link_to_function("[Edit Palette]", "new EditExhibitObjectListDlg('#{PROGRESS_SPINNER_PATH}', '/my9s/get_all_collected_objects', '/my9s/update_objects_in_exhibits', #{exhibit.id}, 'exhibit_palette'); return false;", { :class => 'nav_link' }) %>
</span>
<table>
	<% count = 0 -%>
	<% 0.upto(3) do -%>
		<tr>
			<% 0.upto(10) do -%>
				<td>
					<% if count < collected_object_thumbnails.length -%>
						<img width="25px" height="25px" src="<%= collected_object_thumbnails[count][:image] %>" alt="<%= collected_object_thumbnails[count][:title] %>" title="<%= collected_object_thumbnails[count][:title] %>" />
						<% count = count + 1 -%>
					<% else -%>
						<div style="width:25px;height:25px;"></div>
					<% end -%>
				</td>
			<% end -%>
		</tr>
	<% end -%>
</table>
