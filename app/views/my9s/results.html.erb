<% current_page "My&nbsp;9s" -%>
<div id="search-main">
	<% if !is_logged_in? -%>
		<%= render :partial => 'my9s_instructions' %>
	<% else -%>
		<div class="tag_minor_nav"> 
			<%= link_to "My 9s", :action => 'index' %><%= link_separator() %>&nbsp;My objects&nbsp;<br />
		</div> 
		
		<table class="results_layout"><tr>
			<tr>
				<td class="tag_sidebar standard_box">
					<h1>MY TAGS</h1>
					<% selected_tag = "" -%>
					<% selected_tag = params[:tag] if params[:view] == 'tag' -%>
					<div id="tag_cloud_div">
						<%= render :partial => '/tag/cloud', :locals => { :cloud_freq => @cloud_freq, :bucket_size => @bucket_size, :selected_tag => selected_tag } %>
					</div>
					<div class="untagged_and_all_links">
						<% if params[:view] == 'untagged' -%>
						<span class="sidebar_tag_link_selected">List All Untagged Objects</span>
						<% else -%>
						<span class="sidebar_tag_link"><%= link_to "List All Untagged Objects", { :action => 'results', :view => 'untagged', :anchor => "top_of_results" } %></span>
						<% end -%>
						&nbsp;
						<% if params[:view] == 'all_collected' -%>
						<span class="sidebar_tag_link_selected">List All Collected Objects</span>
						<% else -%>
						<span class="sidebar_tag_link"><%= link_to "List All Collected Objects", { :action => 'results', :view => 'all_collected', :anchor => "top_of_results" } %></span>
						<% end -%>
					</div>
				</td>
				<td rowspan="2" width="150px" valign="top">
					<div id="exhibited_objects_container" class="standard_box">
						<%= render :partial => 'exhibited_objects', :locals => { :current_user_id => user.id } %>
					</div>
				</td>
			</tr>

			<tr>
				<td class="tag_results standard_box">
				<%= render( :partial => 'results/result_count' ) %>    
				<h1><a id="top_of_results"><%= create_total(params[:view], @total_hits, params[:tag]) %><a></h1>
				<%= render( :partial => 'results/bulkcollect' ) %>
				<%= render( :partial => 'results/pagination', :locals => { :page => @page, :num_pages => @num_pages, :destination_hash => { :action => 'results', :anchor => "top_of_results"} }  ) %>
				
				<form name="bulk_collect_form" id="bulk_collect_form" action="/results/bulk_collect" method="post">
					<input type="hidden" name="return" value="/my9s/results" />
					<div id="all_displayed_results">
						<%= render( :partial => 'results/results', :locals => { :user_id => user.id, :hits => @results } ) %>
					</div>
				</form>
				
				<%= render( :partial => 'results/pagination', :locals => { :page => @page, :num_pages => @num_pages, :destination_hash => { :action => 'results', :anchor => "top_of_results" } } ) %>
				<%= render( :partial => 'results/bulkcollect' ) %>
				</td>
			</tr></table>
		</div>
		
		<%= render :partial => 'common/ajax_forms' %>
	<% end -%>