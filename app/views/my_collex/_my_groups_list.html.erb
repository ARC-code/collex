<%# my_groups_list : parameters: user_id -%>
<div class="right_column_header">My Groups</div>
<% my_groups = Group.get_all_users_groups(user_id) -%>
<% if my_groups.length == 0 -%>
	<div class="empty_list_text" >You have not started or joined any groups.</div>
<% else -%>
<% for group in my_groups -%>
	<div class="side_bar_exhibit_thumbnail"><%= render :partial => 'common/thumbnail', :locals => { :element_id => "group_#{group.id}", :url => get_group_image_url(group), :show_immediately => false } %></div>
	<div class="side_bar_exhibit_text exhibit_link"><%= link_to(group.name, { :controller => 'groups', :action => 'show', :id => group.get_visible_id() }, { :class => 'nav_link' }) %></div>
	<div class="side_bar_exhibit_spacer clear_both"></div>
<% end -%>
<% end -%>
	<%= link_to_function("Create Group", "new CreateGroupWizardDlg('#{user_id}', '/groups/verify_group_title', '/groups/create', '/groups/', #{Group.types_to_json(true)}, #{Group.permissions_to_json()}, #{Group.visibility_to_json()}, '#{Group.types()[0]}', '#{SITE_NAME}', '/forum/get_nines_obj_list', '#{PROGRESS_SPINNER_PATH}', '#{User.find(user_id).institution}', '#{User.find(user_id).fullname}'); return false;", :class => 'nav_link' ) %>
	<%= link_to_function("[Browse Groups]", "new BrowseGroupsDlg('#{PROGRESS_SPINNER_PATH}', '/#{MY_COLLEX_URL}/get_all_groups', 'browse_groups'); return false;", { :class => 'nav_link' }) %>
