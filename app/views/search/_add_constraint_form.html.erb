<% # add_constraint_form : no parameters -%>
<center>
<div class="add_constraint_form">
	<div class="page_header">Search <%= SITE_NAME %>:</div>
    <form id="add-search-constraint" method="post" action="/collex/add_constraint" onsubmit="return searchValidation('search_year', null, null, 'search_submit', 'search_submit2');" >
    	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
	<table>
        <tr><td colspan='2'><%= text_field_with_suggest :search, :keyword,  {:class=>"search_entry_box_keyword"}, {:min_chars => 2}-%></td><td><input id="search_submit" type="submit" value="Search" /></td></tr>
		<tr><td colspan='3'><div class="search_help_icon"><a href="/help.html"><img height="18" src="/images/help_thumb.gif" alt="help" /></a></div><div class="search_entry_instructions">Other search options:</div></td></tr>
        <tr><td>Title:</td><td><input name="search_title" id="search_title" type="text" class="search_entry_box" /></td></tr>
        <tr><td>Author:</td><td><input name="search_author" id="search_author" type="text" class="search_entry_box" /></td></tr>
        <tr><td>Editor:</td><td><input name="search_editor" id="search_editor" type="text" class="search_entry_box" /></td></tr>
        <tr><td>Publisher:</td><td><input name="search_publisher" id="search_publisher" type="text" class="search_entry_box" /></td></tr>
        <tr><td>Year (YYYY):</td><td><input name="search_year" id="search_year" type="text" class="search_entry_box" /></td></tr>
        <tr><td colspan="3" style="text-align: right;"><input id="search_submit2" type="submit" value="Search" /></td></tr>
    </table>
	</form>
		
	<% if is_logged_in? -%>
		<div id="saved-searches">
			<%= render :partial => 'save_search_list', :locals => { :header_class => 'page_header' } %>
		</div>
	<% end -%>
</div>
</center>
