<div id="resource-list">
	<h1>LIMIT BY RESOURCE</h1>
	<div class="resource-list-content">
		<p class="sidebar_instructions"><i>Select a resource with which to narrow your search.</i></p>
			<% for resource_category in @sites_forest.sorted_children -%>
			<% if site_category_subtotal(resource_category) != 0 -%>
				<h2><%= site_category_heading("#{h(resource_category.display_name.upcase)} (#{number_with_delimiter( site_category_subtotal(resource_category) )})", resource_category.id, :open ) %></h2>
					<div id="cat_<%= resource_category.id %>" class="cat_<%= resource_category.id %>_child">
						<ul>
						<% for resource in resource_category.sorted_children -%>
							<%= render :partial => 'sub_category', :locals => { :resource => resource } %>
						<% end -%>
					</ul>
					</div>
			<% end # if category is not zero -%>
			<% end # for loop -%>
	</div>
	<h1>LIMIT BY GENRE</h1>
	<div class="resource-list-content">
		<p class="sidebar_instructions"><i>Select the genres to include in your search.</i></p>
			<ul>
				<% for genre in @genre_data -%>
					<li><%= genre_data_link( genre ) %></li>
				<% end -%>
			</ul>	
	</div>
	<h1>LIMIT TO FREE CULTURE</h1>
	<div class="resource-list-content">
		<p class="sidebar_instructions"><i>'Free Culture' resources are freely available in their full form on the Internet. Check this box to search for 'Free Culture' objects only.</i></p>
		<ul>
			<%= free_culture_link(@freeculture_count) %>
		</ul>		
	</div>
</div>
