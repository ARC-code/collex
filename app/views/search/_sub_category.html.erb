<% if resource.sorted_children.size > 0 -%>
	<% category_subtotal = site_category_subtotal(resource) -%>
	<% if category_subtotal != 0 -%>
	<li <%=gray_if_zero(category_subtotal)%>><%= "#{site_category_heading(resource.display_name, resource.id)} (#{number_with_delimiter( category_subtotal )})" %></li>
	<ul class="cat_<%= resource.id %>_child noshow">
		<% for resource in resource.sorted_children -%>
			<%= render :partial => 'sub_category', :locals => { :resource => resource } %>
		<% end -%>
	</ul>
	<% end # if category is not zero -%>
<% else -%>
	<%= resource_data_link( resource ) %>
<% end -%>
