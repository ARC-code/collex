<% current_page "Search" -%>

<table id="search-outer" >
	<tr>
		<td id="search-sidebar">
			<%= render( :partial => 'search_sidebar' ) %>
		</td>
		<td id="search-main">
			<div id="search-terms">
		  	<% if session[:constraints].size > 0 -%>
				 <form action="/collex/new_search" method="post">
						<input class="reset-search-button" type="submit" value="New Search"/>
				 </form> 
			 <% end -%>
				<h1>SEARCH QUERY<%= render :partial => 'show_saved_search' %></h1>
				<%= render( :partial => 'constraints' ) %>
				<%= render( :partial => 'add_constraint_form' ) %>
			  	<% if session[:constraints].size == 0 && is_logged_in? -%>
					<%= render :partial => 'save_search_list' %>
				<% end -%>
			</div>
	  	<% if session[:constraints].size > 0 and @num_pages > 0 -%>
		    <a name="results"></a>
				<div id="search-results">
			  <%= render( :partial => 'results/result_count' ) %>    
				<h1>SEARCH RESULTS: <%=number_with_delimiter(@results["total_hits"])%> OBJECTS FOUND</h1>

		    <%= render( :partial => 'results/bulkcollect' ) %>
				<%= render( :partial => 'results/pagination' ) %>
			
		    <form name="bulk_collect_form" id="bulk_collect_form" method="post">
		      <%= render( :partial => 'results/results', :locals => { :page => @page, :hits => @results['hits'] } ) %>
		    </form>
	
		    <%= render( :partial => 'results/pagination' ) %>
		    <%= render( :partial => 'results/bulkcollect' ) %>
		
			<% else -%>
		        <% if @num_pages == 0 && session[:constraints] && session[:constraints].size > 0 %>
		          <p class="matchpoint">No NINES objects fit your constraints. <%= link_to "Remove Last Constraint.", {:controller=>'search', :action => 'remove_constraint', :index => session[:constraints].size-1 } %></p>
		        <% end %>
			<div class="no-results">
				<br /><br /><br /><br /><center>
			<img height="250px" src="../images/lg-harrington.gif" alt="" />
			</center>
			</div>
			  <% end -%>
			
			  <!-- leave this blank div in here to make sure you can click anywhere on the document for MSIE 5 mac -->
			  <div id="blankDiv" style="position: absolute; left: 0; top: 0; visibility: hidden"></div>
			</div>
		</td>
	</tr>
</table>

